{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "selenium-webdriver", "chai"]
  },
  "include": ["src/**/*", "features/**/*", "*.js"],
  "exclude": ["node_modules", "dist"]
}